{
  "private": true,
  "homepage": "https://github.com/wopian/kitsu#readme",
  "repository": "https://github.com/wopian/kitsu",
  "bugs": {
    "url": "https://github.com/wopian/kitsu/issues"
  },
  "engines": {
    "node": ">=6"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna exec --bail=false yarn build",
    "lint": "eslint packages",
    "test": "yarn test:coverage && yarn lint",
    "test:coverage": "jest --coverage",
    "test:release": "jest && yarn lint"
  },
  "devDependencies": {
    "lerna": "~2.8.0",
    "axios-mock-adapter": "~1.13.0",
    "babel-cli": "~6.26.0",
    "babel-core": "~6.26.0",
    "babel-plugin-transform-runtime": "~6.23.0",
    "babel-preset-env": "~1.6.0",
    "babel-preset-stage-0": "~6.24.1",
    "cross-env": "~5.1.0",
    "documentation": "~5.4.0",
    "eslint": "~4.17.0",
    "eslint-config-wopian": "~1.2.0",
    "jest": "~22.3.0",
    "rollup": "~0.55.0",
    "rollup-plugin-babel": "~3.0.1",
    "rollup-plugin-babel-minify": "~4.0.0",
    "rollup-plugin-local-resolve": "~1.0.7",
    "size-limit": "~0.14.0",
    "yaspeller-ci": "~1.0.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/src/**/*.js",
      "!**/__cases__/**"
    ],
    "coverageDirectory": "<rootDir>/coverage",
    "moduleNameMapper": {
      "^kitsu-core(.*)$": "<rootDir>/packages/kitsu-core/src/$1",
      "^kitsu(.*)$": "<rootDir>/packages/kitsu/src/$1",
      "^pkg$": "<rootDir>/package.json"
    }
  },
  "renovate": {
    "extends": [
      ":npm",
      ":preserveSemverRanges",
      ":combinePatchMinorReleases",
      ":renovatePrefix",
      ":semanticCommits",
      ":semanticCommitTypeAll(chore)",
      ":rebaseStalePrs",
      ":unpublishSafe",
      ":prNotPending",
      ":automergeDisabled",
      ":maintainLockFilesMonthly",
      ":ignoreUnstable",
      ":updateNotScheduled",
      ":label(dependencies)",
      ":timezone(Europe/London)",
      ":assignee(wopian)",
      "group:babelMonorepo",
      "group:jestMonorepo",
      "group:reactMonorepo",
      "group:storybookMonorepo"
    ],
    "prTitle": "update {{depName}} to {{newVersion}}",
    "commitMessage": "update {{depName}} to {{newVersion}}"
  }
}
