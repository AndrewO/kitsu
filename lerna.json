{
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "allowBranch": [
        "master"
      ],
      "conventionalCommits": true,
      "message": "chore(release): publish packages",
      "npmClient": "yarn"
    }
  },
  "ignoreChanges": [
    "**/example/**",
    "specification/**",
    "**/*.spec.js",
    "**/*.tgz"
  ]
}
