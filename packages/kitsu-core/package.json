{
  "name": "kitsu-core",
  "version": "5.0.0-beta.2",
  "description": "Core (de)serialisation functions for the kitsu JSON:API client",
  "license": "MIT",
  "author": "James Harris <wopian@wopian.me>",
  "main": "lib/index.js",
  "module": "lib/index.mjs",
  "engines": {
    "node": ">=6"
  },
  "keywords": [
    "jsonapi",
    "json-api",
    "serialize",
    "deserialize"
  ],
  "files": [
    "lib"
  ],
  "scripts": {
    "docs:lint": "documentation lint src/index.js",
    "docs:build": "documentation readme src/index.js --section=API --sort-order alpha",
    "rollup": "cross-env NODE_ENV=production rollup -c --environment BUILD:production",
    "build": "yarn rollup && size-limit"
  },
  "dependencies": {
    "babel-runtime": "^6.26.0"
  },
  "size-limit": [
    {
      "path": "./lib/index.js",
      "limit": "10 kb"
    },
    {
      "path": "./lib/index.mjs",
      "limit": "10 kb"
    },
    {
      "path": "./legacy/index.js",
      "limit": "12 kb"
    },
    {
      "path": "./node/index.js",
      "limit": "8 kb"
    },
    {
      "path": "./node/index.mjs",
      "limit": "8 kb"
    }
  ]
}
